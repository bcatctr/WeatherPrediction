<h1>Listing Location</h1>
  <table  class="table table-hover">
    <thead>
    <tr>
      <th>ID</th>
      <th>Lat</th>
      <th>Lon</th>
      <th>Last_update</th>
    </tr>
    </thead>
    <tbody>
    <% @locations.each do |location| %>
        <tr>
          <td><%= location.location_id %></td>
          <td><%= location.lat %></td>
          <td><%= location.long%></td>
          <td><%= location.updated_at.strftime("%H:%M%p %d-%m-%Y").downcase%></td>
        </tr>
    <% end %>
    </tbody>
  </table>
<br>
